<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SantaSecilia.Views.ActividadesPage"
             Title="Actividades"
             BackgroundColor="#FAF4C6">

    <ScrollView Orientation="Both">
        <VerticalStackLayout Padding="150, 30" Spacing="20">

            <Label Text="Actividades y Tarifas" 
                   FontSize="32" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" 
                   TextColor="Black"
                   Margin="0,0,0,40"/>

            <Grid ColumnDefinitions="Auto, 1100" 
                  ColumnSpacing="50"
                  HorizontalOptions="Start" 
                  Margin="0,20">

                <VerticalStackLayout Grid.Column="0">
                    <Border Stroke="Black" 
                            StrokeThickness="2" 
                            Padding="20,10"
                            BackgroundColor="White">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="25" />
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="10"
                                               VerticalOptions="Start">
                            <Label Text="+" TextColor="#3498db" FontSize="20" FontAttributes="Bold"/>
                            <Label Text="Registrar Actividad" FontSize="18" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </Border>
                </VerticalStackLayout>

                <Border Grid.Column="1" 
                        Stroke="Black" 
                        StrokeThickness="1" 
                        BackgroundColor="White">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="15" />
                    </Border.StrokeShape>

                    <VerticalStackLayout>
                        <Grid ColumnDefinitions="2*, 2*, 2*, 1.5*" BackgroundColor="#4DB2FBA5" Padding="20">
                            <Label Text="Actividad" TextColor="Black" FontSize="22" FontAttributes="Bold" VerticalOptions="Center" Grid.Column="0" />
                            <Label Text="Tarifa" TextColor="Black" FontSize="22" FontAttributes="Bold" VerticalOptions="Center" HorizontalTextAlignment="Center" Grid.Column="1" />
                            <Label Text="Estado" TextColor="Black" FontSize="22" FontAttributes="Bold" VerticalOptions="Center" HorizontalTextAlignment="Center" Grid.Column="2" />
                            <BoxView Grid.Column="3" WidthRequest="80" Color="Transparent" />
                        </Grid>

                        <BoxView HeightRequest="1" Color="Black" HorizontalOptions="Fill" />

                        <VerticalStackLayout x:Name="TableRows">

                            <Grid ColumnDefinitions="2*, 2*, 2*, 1.5*" Padding="20,15">
                                <Label Text="Banderero" FontSize="18" TextColor="Black" Grid.Column="0" VerticalOptions="Center"/>
                                <Label Text="0.7790" FontSize="18" TextColor="Black" Grid.Column="1" VerticalOptions="Center" HorizontalTextAlignment="Center"/>
                                <Label Text="Activo" FontSize="18" TextColor="Black" Grid.Column="2" VerticalOptions="Center" HorizontalTextAlignment="Center"/>

                                <Border Grid.Column="3" Stroke="#A0A0A0" Padding="12,6" HorizontalOptions="Center" BackgroundColor="White">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8"/>
                                    </Border.StrokeShape>
                                    <HorizontalStackLayout Spacing="8">
                                        <Label Text="✎" TextColor="#3498db" VerticalOptions="Center" FontAttributes="Bold"/>
                                        <Label Text="Editar" TextColor="Black" VerticalOptions="Center" FontSize="16"/>
                                    </HorizontalStackLayout>
                                </Border>
                            </Grid>

                            <!-- <BoxView HeightRequest="0.5" Color="#EEEEEE" Margin="20,0" /> -->

                            <Grid ColumnDefinitions="2*, 2*, 2*, 1.5*" Padding="20,15">
                                <Label Text="Limpiar Empacadora" FontSize="18" TextColor="Black" Grid.Column="0" VerticalOptions="Center"/>
                                <Label Text="0.7790" FontSize="18" TextColor="Black" Grid.Column="1" VerticalOptions="Center" HorizontalTextAlignment="Center"/>
                                <Label Text="Activo" FontSize="18" TextColor="Black" Grid.Column="2" VerticalOptions="Center" HorizontalTextAlignment="Center"/>

                                <Border Grid.Column="3" Stroke="#A0A0A0" Padding="12,6" HorizontalOptions="Center" BackgroundColor="White">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8"/>
                                    </Border.StrokeShape>
                                    <HorizontalStackLayout Spacing="8">
                                        <Label Text="✎" TextColor="#3498db" VerticalOptions="Center" FontAttributes="Bold"/>
                                        <Label Text="Editar" TextColor="Black" VerticalOptions="Center" FontSize="16"/>
                                    </HorizontalStackLayout>
                                </Border>
                            </Grid>

                           <!-- <BoxView HeightRequest="0.5" Color="#EEEEEE" Margin="20,0" /> -->

                            <Grid ColumnDefinitions="2*, 2*, 2*, 1.5*" Padding="20,15">
                                <Label Text="Soldador" FontSize="18" TextColor="Black" Grid.Column="0" VerticalOptions="Center"/>
                                <Label Text="1.0126" FontSize="18" TextColor="Black" Grid.Column="1" VerticalOptions="Center" HorizontalTextAlignment="Center"/>
                                <Label Text="Inactivo" FontSize="18" TextColor="Black" Grid.Column="2" VerticalOptions="Center" HorizontalTextAlignment="Center"/>

                                <Border Grid.Column="3" Stroke="#A0A0A0" Padding="12,6" HorizontalOptions="Center" BackgroundColor="White">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8"/>
                                    </Border.StrokeShape>
                                    <HorizontalStackLayout Spacing="8">
                                        <Label Text="✎" TextColor="#3498db" VerticalOptions="Center" FontAttributes="Bold"/>
                                        <Label Text="Editar" TextColor="Black" VerticalOptions="Center" FontSize="16"/>
                                    </HorizontalStackLayout>
                                </Border>
                            </Grid>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>