<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SantaSecilia.Views.EditarTrabajadorPage"
    Title="Component Header x3"
    BackgroundColor="#FAF4C6">

    <Grid>
        <!-- Card principal -->
        <Frame
            BackgroundColor="#F2F2F2"
            CornerRadius="30"
            Padding="0"
            Margin="60"
            HasShadow="True">

            <VerticalStackLayout Spacing="0">

                <!-- Header verde -->
                <Grid BackgroundColor="#CFE3C8"
                      Padding="15">
                    <Label
                        Text="Editar Trabajador"
                        FontSize="22"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"/>
                </Grid>

                <!-- Contenido -->
                <Grid Padding="30"
                      ColumnDefinitions="2*,2*"
                      RowDefinitions="Auto">

                    <!-- FORM -->
                    <VerticalStackLayout Spacing="8">

                        <!-- Nombre -->
                        <Label Text="Nombre Completo"/>
                        <Border Stroke="#CCC"
                            StrokeShape="RoundRectangle 20"
                            BackgroundColor="White"
                            Padding="5">

                            <Entry Text="Carlos Mendoza"
                                BackgroundColor="Transparent"/>
                        </Border>

                        <!-- Cedula -->
                        <Label Text="CÃ©dula"/>
                        <Entry
                            Text="4-834-2892"
                            BackgroundColor="White"
                            HeightRequest="40"/>

                        <!-- Estado -->
                        <Label Text="Estado"/>
                        <Picker HeightRequest="40">
                            <Picker.Items>
                                <x:String>Activo</x:String>
                                <x:String>Inactivo</x:String>
                            </Picker.Items>
                        </Picker>

                        <!-- Botones -->
                        <HorizontalStackLayout Spacing="15"
                                               Margin="0,20,0,0">

                            <Button
                                Text="Guardar Cambios"
                                BackgroundColor="#BFD3E0"
                                TextColor="Black"
                                CornerRadius="20"/>
                            <Button
                                Text="Cancelar"
                                BackgroundColor="DarkRed"
                                TextColor="White"
                                Clicked="OnCancelarClicked"
                                CornerRadius="20"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>

                    <!-- Imagen derecha -->
                    <Frame Grid.Column="1"
                           BorderColor="Black"
                           Padding="10"
                           CornerRadius="80"
                           HorizontalOptions="Center"
                           VerticalOptions="Center">
                        
                        <!-- Cambia la ruta si tienes el logo -->
                        <Image
                            Source="logo_bananera.png"
                            Aspect="AspectFit"
                            HeightRequest="220"
                            WidthRequest="220"/>
                    </Frame>
                </Grid>
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>