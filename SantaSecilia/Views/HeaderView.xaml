<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SantaSecilia.Views.HeaderView">

    <Border BackgroundColor="White"
            Stroke="#E0E0E0"
            StrokeThickness="1"
            Padding="20,10">

        <Grid ColumnDefinitions="Auto, Auto, *, Auto"
              ColumnSpacing="20">

            <!-- Logo -->
            <Image Grid.Column="0"
                   Source="logo.png"
                   HeightRequest="60"
                   WidthRequest="60"
                   Aspect="AspectFit"
                   VerticalOptions="Center">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="NavHome_Tapped"/>
                </Image.GestureRecognizers>
            </Image>

            <!-- Nombre de la finca -->
            <Label Grid.Column="1"
                   Text="Bananera Santa Cecilia"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="Black"
                   VerticalOptions="Center"/>

            <!-- Links de navegación -->
            <HorizontalStackLayout Grid.Column="2"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   Spacing="30">

                <Label x:Name="LnkRegistroLaboral"
                       Text="Registro Laboral"
                       FontSize="15"
                       TextColor="Black"
                       VerticalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="NavRegistroLaboral_Tapped"/>
                    </Label.GestureRecognizers>
                </Label>

                <Label x:Name="LnkTrabajadores"
                       Text="Trabajadores"
                       FontSize="15"
                       TextColor="Black"
                       VerticalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="NavTrabajadores_Tapped"/>
                    </Label.GestureRecognizers>
                </Label>

                <Label x:Name="LnkLotes"
                       Text="Lotes"
                       FontSize="15"
                       TextColor="Black"
                       VerticalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="NavLotes_Tapped"/>
                    </Label.GestureRecognizers>
                </Label>

                <Label x:Name="LnkActividades"
                       Text="Actividades"
                       FontSize="15"
                       TextColor="Black"
                       VerticalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="NavActividades_Tapped"/>
                    </Label.GestureRecognizers>
                </Label>

                <Label x:Name="LnkBoletaSemanal"
                       Text="Boleta Semanal"
                       FontSize="15"
                       TextColor="Black"
                       VerticalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="NavBoletaSemanal_Tapped"/>
                    </Label.GestureRecognizers>
                </Label>

                <Label x:Name="LnkReporteGlobal"
                       Text="Reporte Global"
                       FontSize="15"
                       TextColor="Black"
                       VerticalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="NavReporteGlobal_Tapped"/>
                    </Label.GestureRecognizers>
                </Label>

            </HorizontalStackLayout>

            <!-- Botón Logout -->
            <Button Grid.Column="3"
                         ImageSource="salida.png"
                         HeightRequest="40"
                         VerticalOptions="Center"
                         BackgroundColor="Transparent"
                         Clicked="Logout_Clicked"/>

        </Grid>
    </Border>

</ContentView>