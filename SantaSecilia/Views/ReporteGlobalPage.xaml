<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:SantaSecilia.Views"
             x:Class="SantaSecilia.Views.ReporteGlobalPage"
             Title="Reporte Global"
             BackgroundColor="#FAF4C6">

    <ScrollView>
        <VerticalStackLayout Spacing="20">

            <Grid RowDefinitions="Auto, *">

                <!-- Header -->
                <views:HeaderView Grid.Row="0"
                      x:Name="MyHeader"/>

                <Grid Grid.Row="1"
              Padding="20"
              RowDefinitions="Auto, Auto, Auto, *, Auto"
              RowSpacing="15">

                    <!-- Título -->
                    <Label Grid.Row="0"
               Text="Reporte Global"
               TextColor="Black"
               FontSize="32"
               FontAttributes="Bold"/>

                    <!-- Subtítulo -->
                    <Label Grid.Row="1"
               Text="Detalle por Actividad"
               TextColor="#555555"
               FontSize="18"
               FontAttributes="Italic"
               Margin="0,0,0,25"/>

                    <!-- Selector de semana -->
                    <VerticalStackLayout Grid.Row="2"
                             HorizontalOptions="Start"
                             Spacing="5">
                        <HorizontalStackLayout Spacing="5">
                            <Image Source="calendario.png" HeightRequest="20"/>
                            <Label Text="Semana"
                       FontSize="15"
                       FontAttributes="Bold"
                       TextColor="Black"
                       VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border Stroke="#949C94"
                    StrokeThickness="1"
                    BackgroundColor="White"
                    StrokeShape="RoundRectangle 20"
                    Padding="10,0">
                            <Picker x:Name="SemanaPicker"
                        WidthRequest="180"
                        TextColor="Black"
                        BackgroundColor="Transparent"
                        SelectedIndexChanged="SemanaPicker_SelectedIndexChanged">
                                <Picker.Items>
                                    <x:String>04/01/26 - 08/01/26</x:String>
                                    <x:String>11/01/26 - 15/01/26</x:String>
                                    <x:String>18/01/26 - 22/01/26</x:String>
                                </Picker.Items>
                            </Picker>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Tabla -->
                    <Border Grid.Row="3"
                Stroke="Transparent"
                StrokeShape="RoundRectangle 14"
                VerticalOptions="Start">

                        <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto">

                            <!-- Encabezado -->
                            <Border Grid.Row="0"
                        BackgroundColor="#B2FBA5"
                        StrokeShape="RoundRectangle 12"
                        Padding="12">
                                <Grid ColumnDefinitions="3*, 2*, 2*, 2*">
                                    <Label Text="Actividad"
                               FontAttributes="Bold"
                               FontSize="16"
                               TextColor="Black"
                               Grid.Column="0"/>
                                    <Label Text="Horas Totales"
                               FontAttributes="Bold"
                               FontSize="16"
                               TextColor="Black"
                               HorizontalTextAlignment="Center"
                               Grid.Column="1"/>
                                    <Label Text="Tarifa"
                               FontAttributes="Bold"
                               FontSize="16"
                               TextColor="Black"
                               HorizontalTextAlignment="Center"
                               Grid.Column="2"/>
                                    <Label Text="Total por Actividad"
                               FontAttributes="Bold"
                               FontSize="16"
                               TextColor="Black"
                               HorizontalTextAlignment="Center"
                               Grid.Column="3"/>
                                </Grid>
                            </Border>

                            <!-- Línea divisora superior -->
                            <BoxView Grid.Row="1"
                         HeightRequest="1"
                         Color="#E0E0E0"
                         HorizontalOptions="Fill"/>

                            <!-- Mensaje vacío -->
                            <Border Grid.Row="2"
                        x:Name="MensajeVacioContainer"
                        BackgroundColor="White"
                        StrokeShape="RoundRectangle 12"
                        Padding="12"
                        IsVisible="True">
                                <Label Grid.Row="2"
                       Text="Seleccione una semana para generar el reporte"
                       TextColor="Black"
                       FontSize="18"
                       FontAttributes="Italic"
                       HorizontalOptions="Center"
                       Margin="0,40"/>
                            </Border>

                            <!-- Filas de la tabla -->
                            <CollectionView Grid.Row="2"
                                x:Name="ReporteCollection"
                                IsVisible="False">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="0,4"
                                    Padding="12"
                                    BackgroundColor="White"
                                    Stroke="#E0E0E0"
                                    StrokeThickness="1"
                                    StrokeShape="RoundRectangle 10">
                                            <Grid ColumnDefinitions="3*, 2*, 2*, 2*">
                                                <Label Text="{Binding Actividad}"
                                           TextColor="Black"
                                           FontSize="15"
                                           VerticalOptions="Center"
                                           Grid.Column="0"/>
                                                <Label Text="{Binding Horas}"
                                           TextColor="Black"
                                           FontSize="15"
                                           HorizontalTextAlignment="Center"
                                           VerticalOptions="Center"
                                           Grid.Column="1"/>
                                                <Label Text="{Binding Tarifa}"
                                           TextColor="Black"
                                           FontSize="15"
                                           HorizontalTextAlignment="Center"
                                           VerticalOptions="Center"
                                           Grid.Column="2"/>
                                                <Label Text="{Binding Total}"
                                           TextColor="Black"
                                           FontAttributes="Bold"
                                           FontSize="15"
                                           HorizontalTextAlignment="Center"
                                           VerticalOptions="Center"
                                           Grid.Column="3"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                            <!-- Línea divisora inferior -->
                            <BoxView Grid.Row="3"
                         HeightRequest="1"
                         Color="Transparent"
                         HorizontalOptions="Fill"/>

                            <!-- Fila de total -->
                            <Border Grid.Row="4"
                        BackgroundColor="#B2FBA5"
                        StrokeShape="RoundRectangle 12"
                        Padding="1">
                                <Grid Grid.Row="4"
                      ColumnDefinitions="3*, 2*, 2*, 2*"
                      BackgroundColor="#B2FBA5"
                      Padding="12">
                                    <Label Text="Total pagado:"
                           FontAttributes="Bold"
                           TextColor="Black"
                           VerticalOptions="Center"
                           Grid.Column="0"/>
                                    <Label x:Name="TotalPagadoLabel"
                           Text="—"
                           FontAttributes="Bold"
                           TextColor="Black"
                           HorizontalTextAlignment="Center"
                           VerticalOptions="Center"
                           Grid.Column="3"/>
                                </Grid>
                            </Border>

                        </Grid>
                    </Border>

                    <!-- Botón Imprimir -->
                    <Button Grid.Row="4"
                Text="Imprimir"
                BackgroundColor="#E8F5E9"
                FontAttributes="Italic"
                TextColor="Black"
                CornerRadius="20"
                HorizontalOptions="Center"
                BorderColor="#949C94"
                BorderWidth="1"
                Padding="30,8"
                Clicked="Imprimir_Clicked"/>

                </Grid>
            </Grid>
        </VerticalStackLayout>
   </ScrollView>
</ContentPage>