<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:SantaSecilia.ViewModels"
    x:Class="SantaSecilia.Views.TrabajadorFormPage">

    <ContentPage.BindingContext>
        <vm:TrabajadorFormViewModel/>
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="30" Spacing="15" BackgroundColor="#FAF4C6">

        <Label Text="Registro de Trabajador"
               FontSize="22"
               HorizontalOptions="Center"/>

        <Entry Placeholder="Nombre Completo"
               Text="{Binding Nombre}"/>

        <Entry Placeholder="CÃ©dula"
               Text="{Binding Cedula}"/>

        <Picker Title="Estado"
                ItemsSource="{Binding Estados}"/>

        <HorizontalStackLayout Spacing="10">
            <Button Text="Registrar"
                    BackgroundColor="#8BC34A"
                    TextColor="White"/>

            <Button Text="Cancelar"
                    BackgroundColor="DarkRed"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>