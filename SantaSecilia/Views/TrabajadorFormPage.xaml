<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    BackgroundColor="#FAF4C6"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:SantaSecilia.ViewModels"
    x:Class="SantaSecilia.Views.TrabajadorFormPage">

    <ContentPage.BindingContext>
        <vm:TrabajadorFormViewModel/>
    </ContentPage.BindingContext>

    <!-- CENTRAR TARJETA -->
    <Grid>
        <Border
            Stroke="Black"
            StrokeThickness="1"
            BackgroundColor="White"
            StrokeShape="RoundRectangle 18"
            Padding="0"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            WidthRequest="520">

            <VerticalStackLayout Spacing="0">

                <!-- HEADER -->
                <Border
                    BackgroundColor="#80BFFF"
                    StrokeShape="RoundRectangle 10,5,0,0"
                    Padding="16">

                    <Label
                        Text="Registro de Trabajador"
                        FontSize="20"
                        TextColor="Black"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"/>
                </Border>

                <!-- CONTENIDO -->
                <Grid Padding="20"
                      ColumnDefinitions="*,220"
                      RowDefinitions="Auto">

                    <!-- FORMULARIO -->
                    <VerticalStackLayout Spacing="12">
                        <Label Text="Nombre Completo" FontSize="12" TextColor="Black"/>
                        <Border Stroke="#CCCCCC" StrokeShape="RoundRectangle 10">
                            <Entry
                                Placeholder="Jornalero"
                                Text="{Binding Nombre}"
                                TextColor="Black"
                                BackgroundColor="Transparent"/>
                        </Border>

                        <Label Text="CÃ©dula" FontSize="12" TextColor="Black"/>

                        <Border Stroke="#CCCCCC" StrokeShape="RoundRectangle 10">
                            <Entry
                                Placeholder="x-xxx-xxxx"
                                Text="{Binding Cedula}"
                                TextColor="Black"
                                BackgroundColor="Transparent"/>
                        </Border>

                        <Label Text="Estado" FontSize="12" TextColor="Black"/>

                        <Border Stroke="#CCCCCC" StrokeShape="RoundRectangle 10">
                            <Picker                               
                                    ItemsSource="{Binding Estados}"
                                    TextColor="Black"
                                    BackgroundColor="Transparent"/>
                        </Border>

                        <!-- BOTONES -->
                        <HorizontalStackLayout Spacing="10" Margin="0,10,0,0">

                            <Button
                                Text="Registrar"
                                BackgroundColor="#B2FBA5"
                                TextColor="Black"
                                CornerRadius="15"                             
                                WidthRequest="120"
                                Clicked="OnCancelarClicked"/>

                            <Button
                                Text="Cancelar"
                                BackgroundColor="#FF3C31"
                                TextColor="Black"
                                CornerRadius="15"
                                WidthRequest="120"
                                Clicked="OnCancelarClicked"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>

                    <!-- IMAGEN DERECHA -->
                    <Image
                        Grid.Column="1"
                        Source="logo.png"
                        Aspect="AspectFit"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"/>
                </Grid>
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>